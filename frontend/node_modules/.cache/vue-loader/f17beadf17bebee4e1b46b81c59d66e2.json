                   </div>\n                    <div class=\"subheading\" v-else>\n                        {{ todo.description }}\n                    </div>\n                    <v-btn fab small text color=\"red\" class=\"delete\" @click.stop=\"deleteTodo\">\n                        <v-icon>delete</v-icon>\n                     </v-btn>\n                </v-card-text>\n            </v-card>\n    </v-flex>\n</template>\n\n<script>\nimport {mapGetters} from \"vuex\"\n\nexport default {\n    name : \"Todo\",\n    props : [\"todo\",\"index\"],\n    computed: mapGetters([\"getPriorityColorMapping\"]),\n    \n    methods : {\n         showTodoDetails(){\n            console.log(\"Todo Clicked\")\n         \n            this.$store.commit(\"setCurrentTodo\",{...this.todo})\n            this.$store.commit(\"setCurrentTodoIndex\",this.index)\n            this.$store.commit(\"setTodoDetailsDialogStatus\",true)\n        },\n        deleteTodo(){\n            this.$store.commit(\"setCurrentTodo\",{...this.todo})\n            this.$store.dispatch(\"deleteTodo\")\n        }\n    }\n}\n</script>\n\n<style scoped>\n.todo {\n        border: 1px solid #ccc;\n        background: #ffffff;\n        padding: 1rem;\n        border-radius: 5px;\n        text-align: center;\n        position: relative;\n        cursor: pointer;\n    }\n\n.delete {\n    position: absolute;;\n    bottom:0px;\n    right:0px;\n}\n      \n</style>"]}]}